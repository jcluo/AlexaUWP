<Page
    x:Class="AlexaUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AlexaUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image 
            x:Name="recordButton" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            d:LayoutOverrides="HorizontalAlignment"
            PointerPressed="StartRecord"
            PointerReleased="StopRecord" NineGrid="0" Grid.Column="1" Grid.Row="1"/>
        <Image 
            x:Name="alexaText" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            d:LayoutOverrides="HorizontalAlignment"
            NineGrid="0" Grid.Column="1" Grid.Row="2" Source="Assets/alexa-text.png"/>
        <MediaElement 
            x:Name="playback"
            AutoPlay="True"
            MediaEnded="onMediaEnded" />
    </Grid>
</Page>
